@model HarvestOnline.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="font-family: 'Gill Sans'">Edit Product Details</h1>
<hr />
<div class="row" style="margin-right:20px; width:700px">
    <div class="col-md-12" style="font-family:Courier New, Courier, monospace; margin:25px 25px 25px 25px">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemId" />
            <div class="form-group">
                <label asp-for="ItemName" class="control-label"></label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier" class="control-label"></label>
                <input asp-for="Supplier" class="form-control" />
                <span asp-validation-for="Supplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemSellingQuanity" class="control-label"></label>
                <input asp-for="ItemSellingQuanity" class="form-control" />
                <span asp-validation-for="ItemSellingQuanity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemUnit" class="control-label"></label>
                <input asp-for="ItemUnit" class="form-control" />
                <span asp-validation-for="ItemUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemPortionPrice" class="control-label"></label>
                <input asp-for="ItemPortionPrice" class="form-control" />
                <span asp-validation-for="ItemPortionPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control"/>
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control"/>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
