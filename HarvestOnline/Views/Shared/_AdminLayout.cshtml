<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Harvest Online</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <link href="~/css/pagedesign.css" rel="stylesheet" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3; container-fluid" style="background-color:ghostwhite">
            <div class="container-fluid" style="max-width:1500px">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="list-style-type:none; padding:0;float:right; display:inline-block; font-family:'Courier New', monospace">
                        <li class="nav-item" style="margin: 0px 10px 0px 10px;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"> <img src="~/lib/images/output-onlinepngtools (1).png" style="height:2em" />Notifications</a>
                        </li>             
                        <li class="nav-item" style="margin: 0px 10px 0px 10px;">
                            <img src="~/lib/images/output-onlinejpgtools (1).png" style="height:2em">
                            <div class="dropdown">
                                <button class="dropbtn">Admin</button>
                                <div class="dropdown-content">
                                    <a asp-area="" asp-controller="Home" asp-action="Index">Logout</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

   
    <div style="margin-bottom:100px; max-width:1500px" class="container-fluid">
        <table style="width:auto">
            <tbody style="margin-top:20px">
                <tr style="display:flex">
                    <td style="float:left; border-radius:8px; background-color:#bdf4a7;">
                        <div style="display:inline; font-family:'Courier New', monospace">
                            <img src="~/lib/images/output-onlinepngtools.png" style="vertical-align:middle" class="position-fixed; text-center">
                            <hr />
                            <div>
                                <h4>
                                    <a asp-action="Index" class="nav-link text-dark">
                                        <img src="~/lib/images/circle-cropped (6).png" style="height:2em;" />Check Inventory
                                    </a>
                                </h4>

                                <h4>
                                    <a asp-action="Create" class="nav-link text-dark">
                                        <img src="~/lib/images/circle-cropped.png" style="height:2em;" /> Add New Product
                                    </a>
                                </h4>

                                <h4>
                                    <a asp-area="" asp-controller="Admin" asp-action="DisplayOrders" class="nav-link text-dark">
                                        <img src="~/lib/images/output-onlinejpgtools (5).png" style="height:2em;" />Track Delivery Status
                                    </a>
                                </h4>



                            </div>

                        </div>
                    </td>
                    <td style="float:left; border-radius:8px; background-color:beige;">
                        <div style="margin:15px 15px 15px 15px">
                            <main role="main" class="pb-3">
                                @RenderBody()
                            </main>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

   
    <footer class="border-top footer text-muted" style="background-color:ghostwhite;">
        <div class="container" style="color:black">
            &copy; 2021 - Harvest Online Inc.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


